<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:padding="10dp"
    android:layout_height="fill_parent"
    android:background="@drawable/backkkk"
    tools:context=".MainActivity"
    android:id="@+id/mainLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/listpanel">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Select year :"
                android:textColor="@color/colorWhite"
                android:paddingTop="15dp"
                android:paddingBottom="8dp"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2014"
                    style="?android:attr/buttonStyleSmall"
                    android:text="2014"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/button2015"
                    android:layout_height="wrap_content"
                    style="?android:attr/buttonStyleSmall"
                    android:text="2015"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Select 2 countries :"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/search_border"
                android:id="@+id/listlayout">

                <ListView
                    android:background="@color/colorWhite"
                    android:layout_width="140dp"
                    android:layout_height="460dp"
                    android:id="@+id/list_view"
                    android:dividerHeight="0sp"
                    android:layout_alignParentLeft="true"
                    android:cacheColorHint="#00000000"
                    android:textSize="15sp"
                    android:backgroundTint="#F5FFFA"
                    ></ListView></LinearLayout>


        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout1"
        android:layout_marginStart="40dp"
        android:layout_alignTop="@+id/listpanel"
        android:layout_toEndOf="@+id/listpanel">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:id="@+id/easLayout"
        android:layout_centerHorizontal="true"
        >

    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:textColor="@color/colorPrimary"
        android:text="Ease of doing business"
        android:textSize="30dp"
        android:textStyle="italic"
        android:gravity="center"
        android:id="@+id/titleEase"
        android:layout_alignParentTop="true"
        android:typeface="serif" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageEas"
            android:background="@drawable/charts"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"

            />

    <TextView
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:text="RANKING"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/easeOfBusinessData"
        android:textColor="#000000"
        android:layout_gravity="right"
        android:layout_below="@id/titleEase"
        android:layout_toRightOf="@id/imageEas"
     />

    </RelativeLayout>

        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pieLayout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PIE CHART INFO"
        android:id="@+id/textView3"
        android:layout_marginTop="28dp"
        android:layout_alignStart="@+id/nullValueTv" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/nullValueTv"
            android:layout_marginTop="63dp"
            android:layout_marginLeft="100dp"
            android:textStyle="bold|italic"
            android:textColor="#010101"
            android:layout_marginStart="39dp"
            android:layout_alignTop="@+id/pieChart2"
            android:layout_alignStart="@+id/pieChart2" />
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart2"
        android:layout_width="200sp"
        android:layout_height="150sp"
        android:padding = "50dp"
        android:layout_marginStart="39dp"
        android:layout_below="@+id/textView3"
      />
    </RelativeLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/barLayout1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BAR CHART INFO"
        android:id="@+id/textView2"
        android:layout_centerHorizontal="true"
       />

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/barChart"
            android:layout_width="300sp"
            android:layout_height="100sp"
            android:padding = "50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
</RelativeLayout>

    </LinearLayout>

<LinearLayout
    android:layout_width="400dp"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_toEndOf="@+id/linearLayout1"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secondBarLayout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BARCHART2 INFO"
        android:id="@+id/barChartDescription"
        android:layout_centerHorizontal="true"/>

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/barChart2"
            android:layout_width="300sp"
            android:layout_height="100sp"
            android:padding = "50dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="60dp"
            android:layout_weight="0.9"
            android:textStyle="italic"
            android:textSize="16sp"
            android:typeface="serif"
            android:text="Number of new businesses registered"
            android:id="@+id/titleBusiness"
            android:layout_alignStart="@+id/newBusinessData" />


        <ImageView
            android:layout_weight="1.1"
            android:padding="10dp"
            android:layout_width="40dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/newBusinessData"
            android:layout_toEndOf="@+id/newBusinessData" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:text="Inbformation of the indicators "
            android:id="@+id/newBusinessData"
            android:layout_below="@+id/titleBusiness"
            android:layout_marginStart="29dp" />

    </RelativeLayout>




<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="30dp">

    <TextView
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="60dp"
        android:layout_weight="0.9"
        android:textStyle="italic"
        android:typeface="serif"
        android:textSize="16sp"
        android:gravity="center"
        android:text="Time to prepare and pay taxes"
        android:id="@+id/payTaxes"
        android:layout_above="@+id/payTaxData"
        android:layout_alignParentEnd="true" />


    <ImageView
            android:layout_weight="1.1"
            android:padding="10dp"
            android:layout_width="40dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:text="Information of the indicators "
        android:id="@+id/payTaxData"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="39dp" />
</RelativeLayout>
</LinearLayout>
</RelativeLayout>