<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:padding="10dp"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity"
    android:id="@+id/mainLayout">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal"
        android:id="@+id/allofpage">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/listpanel">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Select year :"
                android:textColor="@color/colorWhite"
                android:paddingTop="15dp"
                android:paddingBottom="8dp"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2014"
                    style="?android:attr/buttonStyleSmall"
                    android:text="2014"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/button2015"
                    android:layout_height="wrap_content"
                    style="?android:attr/buttonStyleSmall"
                    android:text="2015"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Select 2 countries :"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/search_border"
                android:id="@+id/listlayout">
                <TextView
                    android:id="@+id/output"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="1sp"
                    android:singleLine="false"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_search"
                    tools:context=".SearchAndFilterList"
                    android:textSize="13sp"
                    android:hint="Enter Country"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="right"
                    android:background="@color/colorWhiteish"/>

                <ListView
                    android:background="@color/colorWhite"
                    android:layout_width="140dp"
                    android:layout_height="280dp"
                    android:id="@+id/list_view"
                    android:dividerHeight="0sp"
                    android:layout_below="@+id/txt_search"
                    android:layout_alignParentLeft="true"
                    android:cacheColorHint="#00000000"
                    android:textSize="15sp"
                    android:backgroundTint="#F5FFFA"
                    android:layout_alignStart="@+id/txt_search"
                    ></ListView></LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="60dp">

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="340dp"
                android:background="@drawable/arrow"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="80dp"
            >

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart2"
                android:layout_width="300dp"
                android:layout_height="300dp"
                />

            <LinearLayout
                android:layout_width="210dp"
                android:paddingTop="90dp"
                android:paddingRight="30dp"
                android:layout_gravity="right"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="1.1"
                    android:padding="10dp"
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:background="@drawable/ease"/>





                <LinearLayout
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1.1">

                    <TextView
                        android:layout_width="130dp"
                        android:padding="10dp"
                        android:background="@drawable/cloud"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_height="70dp"
                        android:layout_weight="0.9"
                        android:text="Ease of doing business index"/>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/indicator6"
                        android:gravity="center"
                        android:layout_gravity="left"
                        android:text="hiii"/>


                </LinearLayout>





            </LinearLayout>



        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:padding="20dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:paddingTop="50dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_weight="1.1"
                            android:padding="10dp"
                            android:layout_width="20dp"
                            android:layout_gravity="center"
                            android:layout_height="50dp"
                            android:background="@drawable/dealpic"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1.1">



                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="90dp"
                                android:layout_weight="0.9"
                                android:background="@drawable/cloud"
                                android:gravity="center"
                                android:textColor="@color/colorPrimaryDark"
                                android:padding="5dp"
                                android:text="New businesses registered"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/indicator1"
                                android:gravity="center"
                                android:layout_gravity="left"
                                android:text="hiii"/>


                        </LinearLayout>




                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="60dp"
                        android:weightSum="2"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="195dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_weight="1.1"
                                android:padding="10dp"
                                android:layout_width="50dp"
                                android:layout_gravity="center"
                                android:layout_height="50dp"
                                android:background="@drawable/clock"/>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1.1">

                                <TextView
                                    android:layout_width="140dp"
                                    android:layout_height="90dp"
                                    android:layout_weight="0.9"
                                    android:gravity="center"
                                    android:background="@drawable/cloud"
                                    android:padding="5dp"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="Time required to start a new business"/>



                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/indicator2"
                                    android:gravity="center"
                                    android:layout_gravity="left"
                                    android:text="hiii"/>


                            </LinearLayout>




                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="190dp"
                            android:paddingLeft="10dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_weight="1.1"
                                android:padding="10dp"
                                android:layout_gravity="center"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:background="@drawable/startup"/>


                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1.1">


                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="90dp"
                                    android:background="@drawable/cloud"
                                    android:layout_weight="0.9"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:padding="5dp"
                                    android:gravity="center"
                                    android:text="Start-up procedures to register a business"/>

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/indicator3"
                                    android:gravity="center"
                                    android:text="hiii"/>


                            </LinearLayout>




                        </LinearLayout>









                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:weightSum="2"
                        android:paddingTop="70dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_weight="1.1"
                                android:padding="10dp"
                                android:layout_width="20dp"
                                android:layout_gravity="center"
                                android:layout_height="50dp"
                                android:background="@drawable/tax"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1.1">
                                <TextView
                                    android:layout_width="130dp"
                                    android:padding="10dp"
                                    android:background="@drawable/cloud"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:layout_height="80dp"
                                    android:layout_weight="0.9"
                                    android:gravity="center"
                                    android:text="Time to prepare and pay taxes"/>


                                <TextView
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/indicator4"
                                    android:gravity="center"
                                    android:text="hiii"/>


                            </LinearLayout>




                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="190dp"
                            android:paddingLeft="10dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_weight="1.1"
                                android:padding="10dp"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:background="@drawable/tax2"/>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1.1">


                                <TextView
                                    android:layout_width="140dp"
                                    android:padding="10dp"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:layout_height="80dp"
                                    android:background="@drawable/cloud"
                                    android:layout_weight="0.9"
                                    android:gravity="center"
                                    android:text="Total tax rate (% of commercial profits)"/>

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/indicator5"
                                    android:gravity="center"
                                    android:text="hiii"/>


                            </LinearLayout>



                        </LinearLayout>



                    </LinearLayout>


                </LinearLayout>

            </ScrollView>


        </HorizontalScrollView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/indicatorlayout">

    </LinearLayout>

</LinearLayout>
