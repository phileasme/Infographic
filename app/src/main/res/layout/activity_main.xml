<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:background="@drawable/bbb"
    android:id="@+id/mainLayout">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="false"
        android:layout_margin="1dp"
        android:background="@drawable/search_border">
        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:singleLine="false"/>

        <ListView
            android:background="@color/colorWhite"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:id="@+id/list_view"
            android:layout_below="@+id/txt_search"
            android:layout_alignParentLeft="true"
            android:layout_alignStart="@+id/txt_search"
            ></ListView>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2015"
        android:text="2015"
        android:layout_alignBottom="@id/linearLayout"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2014"
        android:text="2014"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button2015" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart2"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:padding = "50dp"
        android:layout_marginStart="35dp"
        android:layout_toEndOf="@+id/linearLayout"/>

    <com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/timeToStartBusinessChart"
        android:layout_width="300sp"
        android:layout_height="100sp"
        android:padding = "50dp"
        android:layout_above="@+id/button2015"
        android:layout_alignStart="@+id/pieChart2" />

    <com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/registerBusinessChart"
        android:layout_width="300sp"
        android:layout_height="100sp"
        android:padding = "50dp"
        android:layout_toRightOf="@+id/timeToStartBusinessChart"
         />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/nullValueTv"
        android:layout_toRightOf="@id/linearLayout"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="100dp"
        android:textStyle="bold|italic"
        android:textColor="#010101" />


</RelativeLayout>
