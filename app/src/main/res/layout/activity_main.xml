<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:padding="10dp"
    android:layout_height="fill_parent"
    android:background="@drawable/bbb"
    tools:context=".MainActivity"
    android:id="@+id/mainLayout">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/listpanel">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Select year :"
                android:textColor="@color/colorWhite"
                android:paddingTop="15dp"
                android:paddingBottom="8dp"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2014"
                    style="?android:attr/buttonStyleSmall"
                    android:text="2014"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/button2015"
                    android:layout_height="wrap_content"
                    style="?android:attr/buttonStyleSmall"
                    android:text="2015"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Select 2 countries :"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/search_border"
                android:id="@+id/listlayout">
                <TextView
                    android:id="@+id/output"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="1sp"
                    android:singleLine="false"/>

                <ListView
                    android:background="@color/colorWhite"
                    android:layout_width="140dp"
                    android:layout_height="460dp"
                    android:id="@+id/list_view"
                    android:dividerHeight="0sp"
                    android:layout_below="@+id/txt_search"
                    android:layout_alignParentLeft="true"
                    android:cacheColorHint="#00000000"
                    android:textSize="15sp"
                    android:backgroundTint="#F5FFFA"
                    android:layout_alignStart="@+id/txt_search"
                    ></ListView></LinearLayout>


        </LinearLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView2"
        android:background="@drawable/charts"
        android:layout_below="@+id/titleEase"
        android:layout_alignEnd="@+id/pieChart2" />

    <TextView
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:textColor="@color/colorPrimary"
        android:text="Ease of doing business"
        android:textSize="30dp"
        android:textStyle="italic"
        android:gravity="center"
        android:id="@+id/titleEase"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginStart="68dp"
        android:typeface="serif" />


    <TextView
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:text="RANKING"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/easeOfBusinessData"
        android:textColor="#000000"
        android:layout_below="@+id/titleEase"
        android:layout_toEndOf="@+id/imageView2" />


    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart2"
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:padding = "50dp"
        android:layout_marginStart="39dp"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/listpanel" />

    <com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/barChart"
        android:layout_width="300sp"
        android:layout_height="100sp"
        android:padding = "50dp"
        android:layout_marginBottom="43dp"
        android:layout_alignBottom="@+id/listpanel"
        android:layout_alignStart="@+id/pieChart2" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/nullValueTv"
        android:layout_marginTop="63dp"
        android:layout_marginLeft="100dp"
        android:textStyle="bold|italic"
        android:textColor="#010101"
        android:layout_marginStart="39dp"
        android:layout_alignTop="@+id/pieChart2"
        android:layout_alignStart="@+id/pieChart2" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BAR CHART INFO"
        android:id="@+id/textView2"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/barChart"
        android:layout_alignStart="@+id/nullValueTv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PIE CHART INFO"
        android:id="@+id/textView3"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/easeOfBusinessData"
        android:layout_alignStart="@+id/nullValueTv" />







    <com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/barChart2"
        android:layout_width="300sp"
        android:layout_height="100sp"
        android:padding = "50dp"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/easeOfBusinessData"
        android:layout_marginTop="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BARCHART2 INFO"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignEnd="@+id/barChart2"
        android:layout_marginEnd="91dp" />




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:id="@+id/relativeLayout">




        <TextView
            android:layout_width="180dp"
            android:padding="10dp"
            android:background="@color/colorWhiteish"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="60dp"
            android:layout_weight="0.9"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Number of new businesses registered"
            android:id="@+id/textView6"
            android:layout_alignStart="@+id/newBusinessData" />


        <ImageView
            android:layout_weight="1.1"
            android:padding="10dp"
            android:layout_width="40dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:background="@drawable/dealpic"
            android:layout_alignBottom="@+id/newBusinessData"
            android:layout_toEndOf="@+id/newBusinessData" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:background="@color/colorWhiteish"
            android:text="Choose a year and countries"
            android:id="@+id/newBusinessData"
            android:layout_below="@+id/textView6"
            android:layout_marginStart="29dp" />

    </RelativeLayout>





        <TextView
            android:layout_width="180dp"
            android:padding="10dp"
            android:background="@color/colorWhiteish"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="60dp"
            android:layout_weight="0.9"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Time to prepare and pay taxes"
            android:id="@+id/textView9"
            android:layout_above="@+id/barChart"
            android:layout_toStartOf="@+id/barChart2" />


        <ImageView
            android:layout_weight="1.1"
            android:padding="10dp"
            android:layout_width="40dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:background="@drawable/tax"
            android:layout_alignTop="@+id/payTaxData"
            android:layout_alignStart="@+id/textView9" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:background="@color/colorWhiteish"
            android:text="Choose a year and countries"
            android:id="@+id/payTaxData"
            android:layout_alignTop="@+id/barChart"
            android:layout_alignEnd="@+id/textView9" />



</RelativeLayout>